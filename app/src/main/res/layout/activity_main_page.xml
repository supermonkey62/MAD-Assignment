<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004B49"
    tools:context=".MainPage">




    <ImageView
        android:id="@+id/greenbox"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white_square_with_half_rounded_corners" />

    <ImageView
        android:id="@+id/calendarbox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="175dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white_square_with_rounded_corners" />

    <TextView
        android:id="@+id/hellotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello!"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:paddingStart="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/usernametext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User"
        app:layout_constraintTop_toBottomOf="@id/hellotext"
        android:layout_marginTop="15dp"
        android:paddingStart="40dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/avatarimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/round_bg_256"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:paddingStart="150dp"
        />

    <ImageView
        android:id="@+id/todobox"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="25dp"
        android:paddingStart="10dp"
        android:paddingEnd="215dp"
        app:layout_constraintTop_toBottomOf="@id/calendarbox"
        app:srcCompat="@drawable/white_square_with_rounded_corners" />

    <ImageView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="25dp"
        android:paddingEnd="10dp"
        android:paddingStart="215dp"
        app:layout_constraintTop_toBottomOf="@id/calendarbox"
        app:srcCompat="@drawable/white_square_with_rounded_corners" />

    <Button
        android:id="@+id/pomobutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="50dp"
        android:text="Go to Pomodoro Timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarbox" />

    <Button
        android:id="@+id/NormalTimerBttn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="50dp"
        android:text="Go to Normal Timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pomobutton" />

    <Button
        android:id="@+id/profilepageBttn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="50dp"
        android:text="Go to Profile Page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NormalTimerBttn" />


</androidx.constraintlayout.widget.ConstraintLayout>