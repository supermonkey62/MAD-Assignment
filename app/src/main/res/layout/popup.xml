<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="8dp">

    <!-- Icon 1 Button -->
    <LinearLayout
        android:id="@+id/icon1_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/icon1_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_24"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/icon1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievement"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Icon 2 Button -->
    <LinearLayout
        android:id="@+id/icon2_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/icon2_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_shopping_cart_24"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/icon2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Icon 3 Button -->
    <LinearLayout
        android:id="@+id/icon3_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/icon3_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_profile"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/icon3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Icon 4 Button -->
    <LinearLayout
        android:id="@+id/icon4_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/icon4_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_settings_24"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/icon4_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>
