<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#335A44"
    tools:context=".LoginPage">



    <!--*******Top Tool Bar**********-->
    <Toolbar
        android:id="@+id/accountSettingToolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#335A44"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">


        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="cursive"
                android:text="Back"
                android:drawableLeft="@drawable/baseline_arrow_back_24"
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                android:textSize="25sp" />


        </LinearLayout>


    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/accountSettingToolbar"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="100dp"
        android:background="#335A44"
        android:orientation="vertical"
        android:padding="10dp">


        <!--*******Account Setting**********-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="cursive"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
        <!--*******Logout**********-->
        <TextView
            android:id="@+id/change_pfp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableLeft="@drawable/baseline_image_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Change Profile Picture"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />
        <!--*******Edit Profile**********-->
        <TextView
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableLeft="@drawable/baseline_password_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/change_username"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableLeft="@drawable/baseline_edit_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Change Username"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/edit_goal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableLeft="@drawable/baseline_star_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif-smallcaps"
            android:text="edit_goal"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />






    </LinearLayout>


</RelativeLayout>