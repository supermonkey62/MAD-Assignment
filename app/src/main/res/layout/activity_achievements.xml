<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:background="@color/white">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/sqaure_background"
            android:padding="8dp">

            <!-- Achievement 1 -->
            <RelativeLayout
                android:id="@+id/achievement1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/achievement_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Achievement 1"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/claim_button"
                    android:layout_alignParentEnd="true"
                    android:text="Claim"/>

                <!-- Reward Text -->
                <LinearLayout
                    android:id="@+id/reward_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/achievement_title"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reward:"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="reward"
                        android:id="@+id/reward"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Linear Progress Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <!-- Your progress bar and related views go here -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50"
                    android:progress="10"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/custom_progress"/>

                <!-- Progress Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/progress_text"
                    android:text="10/50"
                    android:textSize="14sp" />

            </RelativeLayout>

            <!-- Add more achievements as needed -->

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>